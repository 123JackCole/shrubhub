<%= form_for @user do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, :placeholder => 'Username' %> <br><br>

    <%= f.label :password %>
    <%= f.password_field :password, :placeholder => 'Password' %><br><br>

    <%= f.submit "Create Account"%>

<% end %>

<% if flash[:notice]%>
    <% flash[:notice].each do |notice| %>
        <%= notice %>
    <% end %>
<% end %>