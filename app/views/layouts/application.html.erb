<!DOCTYPE html>
<html>
  <head>
    <title>Shrubhub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class='clearfix'>
      <div class="nav">
        <p><%= link_to "ShrubHub", :root %></p>
        <% if logged_in? %>
          <p><%= link_to "Sell a Plant!", new_plant_path %></p>
          <p><%= link_to "Cart", cart_path(current_user) %></p>
          <p><%= link_to "Account", user_path(current_user) %></p>
          <p><%= link_to "Log Out", logout_path %></p>
        <% else %>
          <p><%= link_to "Create Account", new_user_path %></p>
          <p><%= link_to "Log In", login_path %></p>
        <% end %>
    </header>

    <div class='content'>
      <%= yield %>
    </div>

  </body>
</html>
